{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://controlplane.dev/contracts/cli.schema.json",
  "title": "ControlPlane CLI Surface",
  "type": "object",
  "additionalProperties": false,
  "required": ["name", "commands", "exitCodes"],
  "properties": {
    "name": { "type": "string", "minLength": 1 },
    "commands": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["command", "description"],
        "properties": {
          "command": { "type": "string" },
          "description": { "type": "string" },
          "args": { "type": "array", "items": { "type": "string" } }
        }
      }
    },
    "exitCodes": {
      "type": "object",
      "additionalProperties": false,
      "required": ["0", "1"],
      "properties": {
        "0": { "type": "string" },
        "1": { "type": "string" },
        "2": { "type": "string" },
        "3": { "type": "string" }
      }
    }
  }
}
