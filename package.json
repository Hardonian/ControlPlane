{
  "name": "@controlplane/orchestrator",
  "version": "1.0.0",
  "description": "ControlPlane System Orchestrator - coordinates TruthCore, JobForge, and module runners",
  "type": "module",
  "private": true,
  "scripts": {
    "install:all": "pnpm install",
    "build": "turbo run build",
    "build:contracts": "pnpm --filter @controlplane/contracts build",
    "build:test-kit": "pnpm --filter @controlplane/contract-test-kit build",
    "dev": "turbo run dev --parallel",
    "dev:stack": "docker-compose up -d && pnpm run wait:healthy",
    "dev:stack:logs": "docker-compose up",
    "dev:stack:down": "docker-compose down -v",
    "dev:stack:clean": "docker-compose down -v --rmi local",
    "wait:healthy": "node scripts/wait-for-healthy.js",
    "test": "turbo run test",
    "test:contracts": "pnpm --filter @controlplane/contract-test-kit test",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "test:smoke": "node scripts/smoke-test.js",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "ci": "pnpm run lint && pnpm run typecheck && pnpm run test && pnpm run build && pnpm run test:e2e",
    "contract:validate": "pnpm --filter @controlplane/contract-test-kit exec contract-test",
    "contract:validate:json": "pnpm --filter @controlplane/contract-test-kit exec contract-test --json",
    "release": "semantic-release",
    "clean": "turbo run clean && rm -rf node_modules",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.0",
    "@commitlint/config-conventional": "^18.4.0",
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "semantic-release": "^22.0.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@8.12.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "branches": [
      "main",
      "next"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json",
            "packages/*/package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
