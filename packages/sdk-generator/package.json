{
  "name": "@controlplane/sdk-generator",
  "version": "1.0.0",
  "description": "SDK generator for ControlPlane contracts - generates TypeScript, Python, and Go SDKs from Zod schemas",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./cli": {
      "types": "./dist/cli.d.ts",
      "import": "./dist/cli.js"
    }
  },
  "bin": {
    "sdk-gen": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsup src/index.ts src/cli.ts --format esm",
    "dev": "tsup src/index.ts src/cli.ts --format esm --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --max-warnings=0 src --ext .ts",
    "test": "vitest run",
    "generate": "node ./dist/cli.js",
    "validate": "node ./dist/cli.js --validate",
    "clean": "rm -rf dist sdks"
  },
  "dependencies": {
    "@controlplane/contracts": "workspace:*",
    "@controlplane/observability": "workspace:*",
    "zod": "^3.22.4",
    "commander": "^11.1.0",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "license": "Apache-2.0"
}
