{
  "name": "@controlplane/benchmark",
  "version": "1.0.0",
  "description": "Performance benchmarking suite for ControlPlane - measures job throughput, latency, and system scalability",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./contracts": {
      "types": "./dist/contracts/index.d.ts",
      "import": "./dist/contracts/index.js"
    },
    "./runners": {
      "types": "./dist/runners/index.d.ts",
      "import": "./dist/runners/index.js"
    }
  },
  "bin": {
    "cp-benchmark": "./dist/cli/benchmark-cli.js"
  },
  "scripts": {
    "build": "tsup src/index.ts src/contracts/index.ts src/runners/index.ts src/cli/benchmark-cli.ts --format esm,cjs --dts",
    "dev": "tsup src/index.ts --format esm,cjs --dts --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "benchmark": "node ./dist/cli/benchmark-cli.js",
    "benchmark:throughput": "node ./dist/cli/benchmark-cli.js --suite=throughput",
    "benchmark:latency": "node ./dist/cli/benchmark-cli.js --suite=latency",
    "benchmark:truthcore": "node ./dist/cli/benchmark-cli.js --suite=truthcore",
    "benchmark:runner": "node ./dist/cli/benchmark-cli.js --suite=runner",
    "benchmark:contract": "node ./dist/cli/benchmark-cli.js --suite=contract",
    "benchmark:queue": "node ./dist/cli/benchmark-cli.js --suite=queue",
    "benchmark:health": "node ./dist/cli/benchmark-cli.js --suite=health",
    "benchmark:all": "node ./dist/cli/benchmark-cli.js --suite=all",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@controlplane/contracts": "workspace:*",
    "zod": "^3.22.4",
    "commander": "^11.1.0",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Hardonian/ControlPlane.git",
    "directory": "packages/benchmark"
  },
  "keywords": [
    "controlplane",
    "benchmark",
    "performance",
    "load-testing",
    "metrics"
  ]
}
