{
  "name": "@controlplane/controlplane",
  "version": "1.0.0",
  "description": "ControlPlane orchestration CLI and SDK",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "controlplane": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --max-warnings=0 src --ext .ts",
    "test": "vitest run"
  },
  "dependencies": {
    "@controlplane/contract-kit": "workspace:*",
    "@controlplane/observability": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "license": "Apache-2.0"
}
