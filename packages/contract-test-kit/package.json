{
  "name": "@controlplane/contract-test-kit",
  "version": "1.0.0",
  "description": "Contract validation toolkit for ControlPlane ecosystem - validates implementations against canonical schemas",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./cli": {
      "types": "./dist/cli.d.ts",
      "import": "./dist/cli.js"
    }
  },
  "bin": {
    "contract-test": "./dist/cli.js",
    "contract-sync": "./dist/contract-sync.js",
    "capability-registry": "./dist/registry-cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/cli.ts src/contract-sync.ts src/registry-cli.ts --format esm,cjs --dts",
    "dev": "tsup src/index.ts src/cli.ts --format esm,cjs --dts --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@controlplane/contracts": "workspace:*",
    "zod": "^3.22.4",
    "chalk": "^5.3.0",
    "glob": "^10.3.10"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Hardonian/ControlPlane.git",
    "directory": "packages/contract-test-kit"
  },
  "keywords": [
    "controlplane",
    "contracts",
    "testing",
    "validation",
    "schema"
  ]
}
