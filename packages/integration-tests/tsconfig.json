{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@controlplane/contract-kit": ["../contract-kit/dist/index.d.ts"],
      "@controlplane/controlplane": ["../controlplane/dist/index.d.ts"]
    }
  },
  "include": ["../../tests/integration/**/*.ts", "../../tests/integration/**/*.d.ts"]
}
